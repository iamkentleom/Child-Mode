{
"manifest_version": 2,
    "name": "Child-Mode",
    "description": "Blocks offensive terms present in a page â€” making the web a suitable place for a child.",
    "version": "1.0",
    "author": "Kent Leo L. Makibulan",
    "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },
    "offline_enabled": true,
    "incognito": "split",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
          "default_icon": {                    // optional
            "16": "images/icon16.png",           // optional
            "24": "images/icon16.png",           // optional
            "32": "images/icon16.png"            // optional
          },
          "default_title": "Child-Mode",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
        }
}